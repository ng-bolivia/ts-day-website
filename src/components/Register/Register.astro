---
import RegisterForm from '../RegisterForm/RegisterForm.tsx';
import CountdownTimer from '../CountdownTimer/CountdownTimer.tsx';
import data from '../../data/data.json';
---
<section class="section section-with-bc" id="RegisterSection">
  <div class="container">
    <h2>{data.Register.title}</h2>
    <p>{data.Register.text}</p>
    <div class="countdown">
      <CountdownTimer client:visible />
    </div>
    <RegisterForm client:visible />
  </div>
</section>

<style>
  .container {
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  .countdown {
    margin-bottom: 1rem;
  }
  h2 {
    color: white;
    text-align: center;
  }
</style>
