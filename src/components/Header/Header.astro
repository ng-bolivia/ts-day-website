---
import HeaderGallery from '../HeaderGallery/HeaderGallery.astro';
import CountdownTimer from '../CountdownTimer/CountdownTimer.tsx';
import HeaderRegister from '../HeaderRegister/HeaderRegister.tsx';
import i18n from '../../data/i18n/sp.json';
---


<header>
  <div class="container">
    <div class="content">
      <h1>{i18n.Header_title}</h1>
      <p><span class="material-icons">room</span> {i18n.Header_sub_title}</p>
      <p>{i18n.Header_text}</p>
      <CountdownTimer client:visible />
      <HeaderRegister client:visible />
    </div>
    <div class="gallery">
      <HeaderGallery />
    </div>
  </div>
  <div class="wave"></div>
</header>



<style>
  header {
    height: auto;
    background-color: var(--color-blue-one);
    position: relative;
    color: white;
  }
  .container {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-between;
    width: 100%;
    align-items: center;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    margin-bottom: .5rem;
  }
  p {
    color: white;
    margin-bottom: 1rem;
    font-size: 1rem;
  }
  .gallery {
    width: 100%;
  }

  .wave {
    position: absolute;
    height: 70px;
    width: 100%;
    background: var(--color-blue-one);
    z-index: -1;
    bottom: -25px;
  }

  .wave::before, .wave::after {
    content: "";
    display: block;
    position: absolute;
    border-radius: 100% 50%;
  }

  .wave::before {
    width: 55%;
    height: 109%;
    background-color: #fff;
    right: -1.5%;
    top: 60%;
  }
  .wave::after {
    width: 55%;
    height: 100%;
    background-color: var(--color-blue-one);
    left: -1.5%;
    top: 40%;
  }
  .email-copy {
    font-size: .8rem;
    margin-top: .5rem;
  }

  /* Medium only */
  @media screen and (min-width: 40em) and (max-width: 63.9375em) {
    header {
      height: 80vh;
    }
    h1 {
      font-size: 3rem;
    }
    .container {
      flex-direction: row;
    }
    .content {
      width: 50%;
    }
    .gallery {
      width: 45%;
    }
  }

  /* Large and up */
  @media screen and (min-width: 64em) {
    header {
      height: 80vh;
    }
    h1 {
      font-size: 3.5rem;
    }
    .container {
      flex-direction: row;
    }
    .content {
      width: 50%;
    }
    .gallery {
      width: 40%;
    }
  }

</style>
