---
import { Sprite } from 'astro-icon';
import HeaderGallery from '../HeaderGallery/HeaderGallery.astro';
import CountdownTimer from '../CountdownTimer/CountdownTimer.tsx';
import RegisterForm from '../RegisterForm/RegisterForm.tsx';
import data from '../../data/data.json';
---


<header>
  <div class="container">
    <div class="content">
      <h1>{data.Header.title}</h1>
      <p><Sprite name="fa:map-marker" role="img" size={24}/> {data.Header.subTitle}</p>
      <p>{data.Header.text}</p>
      <div class="countdown">
        <p>{data.Header.countdownText}</p>
        <CountdownTimer client:visible />
      </div>
      <RegisterForm client:visible />
    </div>
    <div class="gallery">
      <HeaderGallery />
    </div>
  </div>
  <div class="wave"></div>
</header>



<style>
  header {
    height: auto;
    background-color: var(--color-blue-one);
    position: relative;
    color: white;
  }
  .container {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-between;
    width: 100%;
    align-items: center;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    margin-bottom: .5rem;
  }
  p {
    color: white;
    margin-bottom: 1rem;
    font-size: 1rem;
  }
  p [astro-icon] {
    margin-right: .5rem;
  }
  .gallery {
    width: 100%;
  }
  .countdown {
    background-color: var(--color-blue-two);
    padding: 1rem;
    border-radius: 8px;
    display: inline-block;
    margin-bottom: 1rem;
  }
  .countdown > p {
    margin-bottom: 0;
  }
  .wave {
    position: absolute;
    height: 70px;
    width: 100%;
    background: var(--color-blue-one);
    z-index: -1;
    bottom: -25px;
  }

  .wave::before, .wave::after {
    content: "";
    display: block;
    position: absolute;
    border-radius: 100% 50%;
  }

  .wave::before {
    width: 55%;
    height: 109%;
    background-color: #fff;
    right: 0;
    top: 66%;
  }
  .wave::after {
    width: 55%;
    height: 100%;
    background-color: var(--color-blue-one);
    left: -1.5%;
    top: 40%;
  }

  /* Medium only */
  @media screen and (min-width: 40em) and (max-width: 63.9375em) {
    header {
      height: 80vh;
    }
    h1 {
      font-size: 3rem;
    }
    .container {
      flex-direction: row;
    }
    .content {
      width: 50%;
    }
    .gallery {
      width: 45%;
    }
  }

  /* Large and up */
  @media screen and (min-width: 64em) {
    header {
      height: 80vh;
    }
    h1 {
      font-size: 3.5rem;
    }
    .container {
      flex-direction: row;
    }
    .content {
      width: 50%;
    }
    .gallery {
      width: 44%;
    }
  }

</style>
